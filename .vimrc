inoremap jk <ESC>

syntax on

set number
set relativenumber
set autoindent
set tabstop=4
set shiftwidth=4
set smarttab
set softtabstop=4
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set nohlsearch
set hidden
set noerrorbells
set nowrap
set scrolloff=8
set signcolumn=yes

inoremap jk <ESC>
nnoremap B ^
nnoremap E $
nnoremap $ <nop>
nnoremap ^ <nop>

set encoding=UTF-8
